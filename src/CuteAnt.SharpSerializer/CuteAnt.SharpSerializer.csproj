<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.props" />
  <Import Project="..\nuget.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net471;net451;net40</TargetFrameworks>
    <PlatformTarget>anycpu</PlatformTarget>
    <AssemblyName>CuteAnt.SharpSerializer</AssemblyName>
    <RootNamespace>CuteAnt.SharpSerializer</RootNamespace>
    <DefineConstants>$(DefineConstants);NET_3_5_GREATER</DefineConstants>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>CuteAnt.SharpSerializer</PackageId>
    <Title>CuteAnt.SharpSerializer</Title>
    <Description>CuteAnt.SharpSerializer</Description>
    <PackageTags>csharpserializer</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CuteAnt\CuteAnt.Core.csproj" />
  </ItemGroup>
</Project>
