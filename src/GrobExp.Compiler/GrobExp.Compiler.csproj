<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.grobexp.props" />
  <Import Project="..\nuget.grobexp.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <AssemblyName>GrobExp.Compiler</AssemblyName>
    <RootNamespace>GrobExp.Compiler</RootNamespace>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>GrobExp.Compiler.Signed</PackageId>
    <Title>GrobExp.Compiler.Signed</Title>
    <Description>Efficient compiler of .NET expression trees.</Description>
    <PackageTags>.NET Expression Tree Compiler</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\GrEmit\GrEmit.csproj" />
  </ItemGroup>

</Project>
