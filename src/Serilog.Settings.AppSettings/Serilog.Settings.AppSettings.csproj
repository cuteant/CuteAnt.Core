<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.serilog.props" />
  <Import Project="..\nuget.serilog.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net471;net451;netstandard2.0</TargetFrameworks>
    <AssemblyName>Serilog.Settings.AppSettings</AssemblyName>
    <RootNamespace>Serilog</RootNamespace>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>Serilog.Settings.AppSettings.Unofficial</PackageId>
    <Title>Serilog.Settings.AppSettings.Unofficial</Title>
    <Description>XML configuration (System.Configuration appSettings) support for Serilog.</Description>
    <PackageTags>serilog xml</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition=" '$(ImportLibs)' == 'netfx' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Configuration" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Serilog" Version="$(SerilogDevPackageVersion)" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="$(SystemConfigurationConfigurationManagerPackageVersion)" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net451' ">
    <PackageReference Include="Serilog" Version="$(SerilogPackageVersion)" />
  </ItemGroup>
</Project>
