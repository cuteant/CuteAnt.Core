<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.fast.props" />
  <Import Project="..\nuget.fast.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <AssemblyName>FastExpressionCompiler.LightExpression</AssemblyName>
    <RootNamespace>FastExpressionCompiler.LightExpression</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);LIGHT_EXPRESSION</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>FastExpressionCompiler.LightExpression.Unofficial</PackageId>
    <Title>FastExpressionCompiler.LightExpression(Unofficial)</Title>
    <Description>
      FastExpressionCompiler for LightExpression is 10-40x times faster than Expression.Compile()
    </Description>
    <PackageTags>Performance Expression ExpressionTree Compile DynamicMethod IL ILEmit DryIoc ExpressionToCodeLib</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="$(SystemReflectionEmitLightweightPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\FastExpressionCompiler\**\*.cs" Exclude="..\FastExpressionCompiler\bin\**;..\FastExpressionCompiler\obj\**" />
    <EmbeddedResource Include="..\FastExpressionCompiler\**\*.resx" Exclude="..\FastExpressionCompiler\bin\**;..\FastExpressionCompiler\obj\**;@(EmbeddedResource)" />
  </ItemGroup>

</Project>
