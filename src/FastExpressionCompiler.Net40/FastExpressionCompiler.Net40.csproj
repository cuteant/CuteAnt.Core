<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.fast.props" />
  <Import Project="..\nuget.fast.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net40</TargetFrameworks>
    <AssemblyName>FastExpressionCompiler</AssemblyName>
    <RootNamespace>FastExpressionCompiler</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>FastExpressionCompiler.Net40</PackageId>
    <Title>FastExpressionCompiler.Net40</Title>
    <Description>
      The complete port of the FastExpressionCompiler assembly to support .NET Framework 4.0. 
      You can refer (https://github.com/dadhi/FastExpressionCompiler) for more details.
    </Description>
    <PackageTags>Performance Expression ExpressionTree Compile DynamicMethod IL ILEmit DryIoc ExpressionToCodeLib</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\FastExpressionCompiler\**\*.cs" Exclude="..\FastExpressionCompiler\bin\**;..\FastExpressionCompiler\obj\**" />
    <EmbeddedResource Include="..\FastExpressionCompiler\**\*.resx" Exclude="..\FastExpressionCompiler\bin\**;..\FastExpressionCompiler\obj\**;@(EmbeddedResource)" />
  </ItemGroup>

</Project>
