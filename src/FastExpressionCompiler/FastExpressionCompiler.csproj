<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\version.fast.props" />
  <Import Project="..\nuget.fast.props" />
  
  <PropertyGroup>
    <TargetFrameworks>net471;net451;net40;netstandard2.0</TargetFrameworks>
    <AssemblyName>FastExpressionCompiler</AssemblyName>
    <RootNamespace>FastExpressionCompiler</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Label="NuGet">
    <PackageId>FastExpressionCompiler.Unofficial</PackageId>
    <Title>FastExpressionCompiler.Unofficial</Title>
    <Description>The complete port of the FastExpressionCompiler assembly to support .NET Framework 4.0 and newer. 
    You can refer (https://github.com/dadhi/FastExpressionCompiler) for more details.</Description>
    <PackageTags>Performance Expression ExpressionTree Compile DynamicMethod IL ILEmit DryIoc ExpressionToCodeLib</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="$(SystemReflectionEmitLightweightPackageVersion)" />
  </ItemGroup>

</Project>
