<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0;net452</TargetFrameworks>
    <RuntimeFrameworkVersion Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">$(NETCoreApp2RuntimeFrameworkVersion)</RuntimeFrameworkVersion>
    <AssemblyName>Autofac.Configuration.Test</AssemblyName>
    <RootNamespace>Autofac.Configuration.Test</RootNamespace>
    <CodeAnalysisRuleSet>../../build/Analyzers.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Files\ComponentRegistrar_ComponentWithMetadata.json" />
    <None Remove="Files\ComponentRegistrar_EnableAutoActivation.json" />
    <None Remove="Files\ComponentRegistrar_EnablePropertyInjection.json" />
    <None Remove="Files\ComponentRegistrar_ExternalOwnership.json" />
    <None Remove="Files\ComponentRegistrar_InstancePerDependency.json" />
    <None Remove="Files\ComponentRegistrar_SameTypeRegisteredMultipleTimes.json" />
    <None Remove="Files\ComponentRegistrar_SingletonWithTwoServices.xml" />
    <None Remove="Files\ConfigurationExtensions_DictionaryParameters.xml" />
    <None Remove="Files\ConfigurationExtensions_EnumerableParameters.xml" />
    <None Remove="Files\ConfigurationExtensions_Parameters.json" />
    <None Remove="Files\ModuleRegistrar_SameModuleRegisteredMultipleTimes.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Files\ComponentRegistrar_ComponentWithMetadata.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_EnableAutoActivation.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_EnablePropertyInjection.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_ExternalOwnership.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_InstancePerDependency.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_SameTypeRegisteredMultipleTimes.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ComponentRegistrar_SingletonWithTwoServices.xml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ConfigurationExtensions_DictionaryParameters.xml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ConfigurationExtensions_EnumerableParameters.xml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ConfigurationExtensions_Parameters.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="Files\ModuleRegistrar_SameModuleRegisteredMultipleTimes.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Autofac.Configuration\Autofac.Configuration.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="$(MicrosoftNetTestSdkPackageVersion)" />
    <PackageReference Include="StyleCop.Analyzers" Version="$(StyleCopAnalyzersPackageVersion)">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <PackageReference Include="xunit" Version="$(xUnitPackageVersion)" />
    <PackageReference Include="xunit.analyzers" Version="$(xUnitAnalyzersPackageVersion)" />
    <PackageReference Include="xunit.runner.visualstudio" Version="$(xUnitRunnerVsPackageVersion)" />
    <PackageReference Include="Moq" Version="$(MoqPackageVersion)" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'netcoreapp2.0' ">
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="$(MicrosoftExtensionsConfigurationPackageVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="$(MicrosoftExtensionsConfigurationJsonPackageVersion)" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Xml" Version="$(MicrosoftExtensionsConfigurationXmlPackageVersion)" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'net452' ">
    <PackageReference Include="NetFx.Extensions.Configuration" Version="$(NetFxExtensionsConfigurationPackageVersion)" />
    <PackageReference Include="NetFx.Extensions.Configuration.Json" Version="$(NetFxExtensionsConfigurationPackageVersion)" />
    <PackageReference Include="NetFx.Extensions.Configuration.Xml" Version="$(NetFxExtensionsConfigurationPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Service Include="{82a7f48d-3b50-4b1e-b82e-3ada8210c358}" />
  </ItemGroup>

</Project>
